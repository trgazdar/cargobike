<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_template_form_dropship" model="ir.ui.view">
        <field name="name">product.template.dropship.product</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <field name="barcode" position="after">
                <field name="main_product_id"/>
            </field>
        </field>
    </record>
    <record id="view_product_template_search_dropship" model="ir.ui.view">
        <field name="name">product.template.search.dropship.product</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <field name="categ_id" position="after">
                <field name="main_product_id"/>
            </field>
        </field>
    </record>
</odoo>
